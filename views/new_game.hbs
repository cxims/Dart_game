<div class="container">
  <h1 class="mb-5 d-flex justify-content-around">Add new game</h1>
          
  <form method="POST" action="/games/">
    <table class="table table-striped table-bordered table-dark" >
      <tr>
        <th scope="col">Name :</th>
        <th scope="col">Mode :</th>
        <th scope="col">Actions</th>
      </tr>
      <tr>
        <td align="center"><input class="form-control"  type="text" name="name" id="name" required/></td>
        <td align="center">
            <select name="mode" class="form-control">
                <option value="around-the-world">Around The World</option>
                <option value="301">301</option>
                <option value="cricket">Cricket</option>
            </select>
        </td>
        <td align="center"><button class="btn btn-light" type="submit">Add</button></td>
      </tr>
    </table>
  </form>
</div>