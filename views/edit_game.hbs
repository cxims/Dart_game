<div class="container">
  <h1 class="mb-5 d-flex justify-content-around">Edit game</h1>
          
  <form method="POST" action="/games/{{game._id}}?overrideMethod=PATCH">
    <table class="table table-striped table-bordered table-dark" >
      <tr>
        <th scope="col">Name :</th>
        <th scope="col">Mode :</th>
        <th score="col">Status :</th>
        <th scope="col">Actions</th>
      </tr>
      <tr>
        <td align="center"><input class="form-control" value="{{ game.name }}" type="text" name="name" id="name" /></td>
        <td align="center">
            <select name="mode" class="form-control">
                <option value="around-the-world">Around The World</option>
                <option value="301">301</option>
                <option value="cricket">Cricket</option>
            </select>
        </td>
        <td align="center">
            <select name="status" class="form-control">
                <option value="draft">Draft</option>
                <option value="started">Started</option>
            </select>
        </td>
        <td align="center"><button class="btn btn-light" type="submit">Confirm</button></td>
      </tr>
    </table>
  </form>
</div>