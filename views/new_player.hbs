<div class="container">
  <h1 class="mb-5 d-flex justify-content-around">Add new player</h1>
          
  <form method="POST" action="/players/">
    <table class="table table-striped table-bordered table-dark" >
      <tr>
        <th scope="col">Name :</th>
        <th scope="col">Email </th>
        <th scope="col">Actions</th>
      </tr>
      <tr>
        <td align="center"><input class="form-control" value="{{ player.name }}" type="text" name="name" id="name" required/></td>
        <td align="center"><input class="form-control" value="{{ player.email }}" type="text" name="email" id="email" required/></td>
        <td align="center"><button class="btn btn-light" type="submit">Ajouter</button></td>
      </tr>
    </table>
  </form>
</div>